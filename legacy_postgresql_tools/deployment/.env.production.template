# Production Environment Variables Template
# Copy to .env and fill in actual values

# Database Configuration
POSTGRES_USER=mastertrade_prod
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_REPLICATION_USER=replication_user
POSTGRES_REPLICATION_PASSWORD=your_replication_password_here

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# RabbitMQ Configuration
RABBITMQ_USER=mastertrade_admin
RABBITMQ_PASSWORD=your_rabbitmq_password_here
RABBITMQ_ERLANG_COOKIE=your_unique_erlang_cookie_here

# Monitoring Configuration
GRAFANA_PASSWORD=your_grafana_admin_password_here

# Security Configuration
VAULT_ROOT_TOKEN=your_vault_root_token_here
JWT_SECRET=your_jwt_secret_key_here
API_ENCRYPTION_KEY=your_api_encryption_key_here

# External Services
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
POLYGON_API_KEY=your_polygon_api_key
NEWSAPI_KEY=your_newsapi_key
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Backup Configuration
BACKUP_S3_BUCKET=mastertrade-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
ALERT_EMAIL=alerts@yourcompany.com

# SSL Configuration
SSL_CERTIFICATE_PATH=/path/to/ssl/cert.pem
SSL_PRIVATE_KEY_PATH=/path/to/ssl/private.key

# Performance Settings
MAX_WORKERS=4
REDIS_MAX_CONNECTIONS=50
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=2000

# Logging
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
ENABLE_DEBUG_LOGGING=false

# Monitoring
PROMETHEUS_RETENTION_DAYS=30
GRAFANA_ALLOW_SIGN_UP=false
ALERTMANAGER_WEBHOOK_URL=your_slack_webhook_url

# Feature Flags
ENABLE_HIGH_FREQUENCY_TRADING=true
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_ML_MODELS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_OPTIONS_TRADING=false
ENABLE_FUTURES_TRADING=false

# Risk Management
MAX_POSITION_SIZE_PERCENT=10
MAX_DAILY_LOSS_PERCENT=5
MAX_PORTFOLIO_LEVERAGE=2.0
ENABLE_CIRCUIT_BREAKERS=true

# Compliance
ENABLE_AUDIT_LOGGING=true
ENABLE_TRADE_REPORTING=true
REGULATORY_ENVIRONMENT=US  # US, EU, UK, etc.

# Development Settings (set to false in production)
DEBUG=false
TESTING_MODE=false
MOCK_EXTERNAL_SERVICES=false