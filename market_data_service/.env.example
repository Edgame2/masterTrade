# Market Data Service Environment Configuration

# Azure Key Vault Configuration (Recommended for Production)
AZURE_KEY_VAULT_URL=https://your-mastertrade-keyvault.vault.azure.net/
AZURE_KEY_VAULT_NAME=your-mastertrade-keyvault
USE_KEY_VAULT=true  # Enable Key Vault for secure secret management

# Azure Authentication (for Key Vault and other Azure services)
AZURE_CLIENT_ID=your-service-principal-client-id  # For service principal authentication
AZURE_CLIENT_SECRET=your-service-principal-secret  # For service principal authentication  
AZURE_TENANT_ID=your-azure-tenant-id  # Azure AD tenant ID

# Azure Cosmos DB Configuration
COSMOS_ENDPOINT=https://your-mastertrade-cosmos.documents.azure.com:443/
COSMOS_DATABASE=mastertrade
USE_MANAGED_IDENTITY=true  # Use Managed Identity for authentication in production
MANAGED_IDENTITY_CLIENT_ID=

# RabbitMQ Configuration  
RABBITMQ_URL=amqp://admin:password123@localhost:5672/

# Binance API Configuration (for crypto data)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here

# Stock Index Data APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
YAHOO_FINANCE_ENABLED=true
FINNHUB_API_KEY=your_finnhub_key

# Sentiment Analysis APIs
NEWS_API_KEY=your_news_api_key
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_secret

# Macro Economic Data
FRED_API_KEY=your_fred_api_key

# On-Chain Data Sources
MORALIS_API_KEY=your_moralis_api_key
MORALIS_API_URL=https://deep-index.moralis.io/api/v2.2
MORALIS_RATE_LIMIT=3.0

GLASSNODE_API_KEY=your_glassnode_api_key
GLASSNODE_API_URL=https://api.glassnode.com
GLASSNODE_RATE_LIMIT=1.0

NANSEN_API_KEY=your_nansen_api_key
NANSEN_API_URL=https://api.nansen.ai
NANSEN_RATE_LIMIT=2.0

# On-Chain Collection Configuration
ONCHAIN_COLLECTION_ENABLED=false  # Enable on-chain data collection
ONCHAIN_COLLECTION_INTERVAL=3600  # Collection interval in seconds (1 hour)
ONCHAIN_WHALE_THRESHOLD_BTC=1000.0  # BTC threshold for whale detection
ONCHAIN_WHALE_THRESHOLD_ETH=10000.0  # ETH threshold for whale detection
ONCHAIN_WHALE_THRESHOLD_USD=1000000.0  # USD threshold for whale detection

# Social Media Data Sources
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_RATE_LIMIT=1.0

REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=MasterTrade/1.0
REDDIT_RATE_LIMIT=0.5

LUNARCRUSH_API_KEY=your_lunarcrush_api_key
LUNARCRUSH_API_URL=https://api.lunarcrush.com/v2
LUNARCRUSH_RATE_LIMIT=0.2

# Social Collection Configuration
SOCIAL_COLLECTION_ENABLED=false  # Enable social sentiment collection
SOCIAL_COLLECTION_INTERVAL=3600  # Collection interval in seconds (1 hour)
SOCIAL_USE_FINBERT=false  # Use FinBERT for sentiment (requires transformers library)
SOCIAL_MIN_ENGAGEMENT=10  # Minimum engagement score to store

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=50

# Service Features
SENTIMENT_ENABLED=true
STOCK_INDEX_ENABLED=true

# Logging
LOG_LEVEL=INFO