# masterTrade Environment Configuration for Azure Cosmos DB
# Copy this to .env and replace with your actual Azure credentials

# Azure Cosmos DB Configuration
COSMOS_ENDPOINT=https://your-mastertrade-cosmos.documents.azure.com:443/
COSMOS_KEY=your_cosmos_primary_key_here_64_characters_long
COSMOS_DATABASE=mastertrade
COSMOS_CONTAINER=trading_data
USE_COSMOS_DB=true

# Azure Authentication & Key Vault
USE_KEY_VAULT=true
AZURE_KEY_VAULT_URL=https://mastertrade-kv.vault.azure.net/
AZURE_CLIENT_ID=12345678-1234-5678-9012-123456789012
AZURE_CLIENT_SECRET=your_service_principal_secret_here
AZURE_TENANT_ID=87654321-4321-8765-2109-876543210987
MANAGED_IDENTITY_CLIENT_ID=11111111-2222-3333-4444-555555555555

# Redis Configuration (Local)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# RabbitMQ Configuration (Local)
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_for_security
API_ENCRYPTION_KEY=your_api_encryption_key_32_chars

# Exchange API Keys (Replace with real keys)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
POLYGON_API_KEY=your_polygon_api_key_here
NEWSAPI_KEY=your_news_api_key_here

# External Services (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_for_notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url_for_alerts

# Monitoring Configuration
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION_DAYS=30

# Feature Flags
ENABLE_LIVE_TRADING=false
ENABLE_PAPER_TRADING=true
ENABLE_ML_MODELS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_HIGH_FREQUENCY_TRADING=false

# Performance Settings
MAX_WORKERS=4
REDIS_MAX_CONNECTIONS=50
DB_POOL_SIZE=20
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=true

# Development Settings
DEBUG=false
TESTING_MODE=false
MOCK_EXTERNAL_SERVICES=false

# Security Settings
ENABLE_CORS=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
SESSION_TIMEOUT_MINUTES=60

# Cosmos DB Performance Settings
COSMOS_MAX_ITEM_COUNT=100
COSMOS_MAX_DEGREE_OF_PARALLELISM=10
COSMOS_ENABLE_CROSS_PARTITION_QUERY=true
COSMOS_CONSISTENCY_LEVEL=Session

# Backup and Recovery
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_RETENTION_DAYS=30
ENABLE_POINT_IN_TIME_RESTORE=true