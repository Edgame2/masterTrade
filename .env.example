# Environment Configuration for MasterTrade

# Azure Key Vault Configuration (Recommended)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
USE_KEY_VAULT=true

# Azure Authentication (for Key Vault and Cosmos DB)
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id

# Azure Cosmos DB Configuration
COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_DATABASE=mastertrade
MANAGED_IDENTITY_CLIENT_ID=your-managed-identity-client-id

# Optional: Cosmos DB Key for local development (store in Key Vault for production)
# COSMOS_KEY=your-cosmos-db-key

# Data Retention (TTL in seconds - default 30 days)
TTL_SECONDS=2592000

# Historical Data Configuration  
HISTORICAL_DATA_DAYS=365
HISTORICAL_BATCH_SIZE=1000

# Real-time WebSocket Configuration
WS_RECONNECT_INTERVAL=5
WS_MAX_RECONNECT_ATTEMPTS=10
WS_PING_INTERVAL=30

# Sentiment Analysis Configuration
SENTIMENT_ENABLED=true
SENTIMENT_UPDATE_INTERVAL=3600

# Sentiment Data Sources API Keys (stored in Key Vault in production)
NEWS_API_KEY=your_newsapi_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# RabbitMQ
RABBITMQ_USER=mastertrade
RABBITMQ_PASSWORD=rabbitmq_secure_password

# Exchange API Keys (Binance)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# JWT Secret for API Gateway
JWT_SECRET=your_jwt_secret_key_here

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=grafana_secure_password

# Trading Configuration
MAX_POSITION_SIZE=1000
RISK_PERCENTAGE=2
STOP_LOSS_PERCENTAGE=1.5
TAKE_PROFIT_PERCENTAGE=3

# Logging
LOG_LEVEL=INFO